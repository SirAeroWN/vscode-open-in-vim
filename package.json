{
    "name": "open-in-vim",
    "displayName": "Open in Vim (dev)",
    "description": "Opens current file in vim",
    "repository": "jonsmithers/vscode-open-in-vim",
    "version": "0.7.0",
    "publisher": "jonsmithers",
    "license": "MIT",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "vim"
    ],
    "activationEvents": [
        "onCommand:open-in-vim.open"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "open-in-vim.open",
                "title": "Open in Vim (dev)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Open in Vim",
            "properties": {
                "open-in-vim.openMethod": {
                    "type": "string",
                    "enum": [
                        "path",
                        "integrated-terminal"
                    ],
                    "scope": "resource",
                    "default": "integrated-terminal",
                    "description": "Determines how vim gets launched"
                },
                "open-in-vim.useNeovim": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use Neovim instead of Vim (does not apply to gvim/macvim open method)"
                },
                "open-in-vim.gvimPath": {
                    "type": "string",
                    "default": null,
                    "description": "Specify the full path of the graphical vim version"
                },
                "open-in-vim.integrated-terminal.pathToShell": {
                    "type": "string",
                    "default": null,
                    "definition": "Path to unix shell which will host the vim process."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "icon": "images/icon.png",
    "dependencies": {
        "@types/tmp": "^0.1.0",
        "opn": "^5.5.0",
        "tmp": "^0.0.33"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.19.0",
        "tslint": "^5.20.0",
        "typescript": "^3.3.1",
        "vscode-test": "^1.2.3"
    }
}
